{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Persons and Companies API",
    "description": "A simple API to demonstrate API Landscape lifecycle",
    "x-lifecycle": {
      "name": "backend-api-design"
    }
  },
  "schemes": [
    "http"
  ],
  "basePath": "/",
  "paths": {
    "/persons": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Gets persons",
        "description": "Returns a list containing all persons.",
        "responses": {
          "200": {
            "description": "A list of Person",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "username"
                ],
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "age": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/companies": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Gets companies",
        "description": "Returns a list containing all persons.",
        "responses": {
          "200": {
            "description": "A list of Companies",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "street": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Persons": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "username"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "age": {
            "type": "number"
          }
        }
      }
    },
    "Companies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "country": {
            "type": "string"
          }
        }
      }
    }
  }
}